# MongoDB Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/competehq?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-jwt-secret-key-replace-in-production

# Next.js environment variables
NEXT_PUBLIC_APP_NAME=CompeteHQ
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_DEFAULT_THEME=light

# Feature flags
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Email service - configure these for production email sending
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@competehq.com

# Application URL - change for production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment - development, test, or production
NODE_ENV=development